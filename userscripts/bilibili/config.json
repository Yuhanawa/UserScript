      "display": "美化",
      "icon": "beautify-icon"
    },
    {
      "key": "optimize",
      "display": "优化",
      "icon": "optimize-icon"
    },
    {
      "key": "useful",
      "display": "实用",
      "icon": "useful-icon"
    },
    {
      "key": "filter",
      "display": "过滤",
      "icon": "filter-icon"
    }
