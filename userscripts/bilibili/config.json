{
  "version": "0.1.38",
  "name": "bilibili",
  "pages": {
    "all": ["bilibili.com"],
    "home": ["www.bilibili.com"],
    "video": ["www.bilibili.com/video"],
    "read": ["www.bilibili.com/read"]
  },
  "category": [
    {
      "key": "tips",
      "display": "tips",
      "icon": "note-icon"
    },
    {
      "key": "undefined",
      "display": "undefined",
      "icon": "undefined-icon"
    },
    {
      "key": "beautify",
      "display": "美化",
      "icon": "beautify-icon"
    },
    {
      "key": "useful",
      "display": "实用",
      "icon": "useful-icon"
    },
    {
      "key": "filter",
      "display": "过滤",
      "icon": "filter-icon"
    },
    {
      "key": "quick",
      "display": "便捷",
      "icon": "quick-icon"
    }
  ],
  "props": {
    "tips": {
      "type": "note",
      "category": "tips",
      "display": "如果发现某条设置存在问题请反馈: https://greasyfork.org/zh-CN/scripts/471069/feedback/"
    },

    "tips-beautify": {
      "type": "note",
      "category": "beautify",
      "display": "-- 美化 --"
    },
    "beautify": {
      "display": "美化",
      "type": "bool",
      "category": "beautify",
      "defaultValue": true
    },
    "remove_carousel": {
      "display": "移除轮播图",
      "type": "bool",
      "category": "beautify",
      "defaultValue": false
    },
    "video_beautify": {
      "display": "视频页美化",
      "type": "bool",
      "category": "beautify",
      "defaultValue": true
    },

    "beautify_work_on_index": {
      "display": "是否美化首页",
      "defaultValue": "on",
      "type": "option",
      "category": "beautify",
      "options": [
        {
          "display": "开启",
          "key": "on"
        },
        {
          "display": "关闭",
          "key": "off"
        }
      ],
      "hidden": "{{ formData.beautify === 'off' }}"
    },
    "background": {
      "display": "自定义背景开关",
      "defaultValue": "on",
      "category": "beautify",
      "type": "option",
      "options": [
        {
          "display": "开启",
          "key": "on"
        },
        {
          "display": "关闭",
          "key": "off"
        }
      ],
      "hidden": "{{ formData.beautify === 'off' }}"
    },
    "background_value": {
      "display": "自定义背景 填url(图片链接)(前置功能:样式美化)",
      "defaultValue": "https://s1.hdslb.com/bfs/static/stone-free/dyn-home/assets/bg.png",
      "hidden": "{{ formData.beautify === 'off' }}",
      "type": "image"
    },
    "video_radius": {
      "display": "视频小圆角",
      "defaultValue": "on",
      "type": "option",
      "options": [
        {
          "display": "开启",
          "key": "on"
        },
        {
          "display": "关闭",
          "key": "off"
        }
      ],
      "hidden": "{{ formData.beautify === 'off' }}"
    },
    "widescreen": {
      "display": "宽屏功能",
      "defaultValue": "on",
      "type": "option",
      "category": "beautify",
      "options": [
        {
          "display": "开启",
          "key": "on"
        },
        {
          "display": "关闭",
          "key": "off"
        }
      ]
    },
    "widescreen-width-times": {
      "display": "宽屏倍数",
      "type": "number",
      "defaultValue": 1.2,
      "required": true,
      "hidden": "{{ formData.widescreen === 'off' }}",
      "category": "beautify",
      "props": {
        "addonAfter": "倍"
      },
      "description": "推荐范围1.00~1.30倍"
    },
    "widescreen_hide_title_onWide": {
      "display": "剧场模式下隐藏视频标题",
      "type": "bool",
      "category": "beautify",
      "defaultValue": false,
      "hidden": "{{ formData.widescreen === 'off' }}"
    },
    "eye_protection_cover": {
      "display": "护眼蒙版(前置功能:样式美化)",
      "defaultValue": "on",
      "category": "beautify",
      "type": "option",
      "options": [
        {
          "label": "开启",
          "value": "on"
        },
        {
          "label": "关闭",
          "value": "off"
        }
      ],
      "hidden": "{{ formData.beautify === 'off' }}"
    },
    "eye_protection_cover_dark": {
      "display": "暗色模式护眼蒙版(前置功能:护眼蒙版)",
      "category": "beautify",
      "defaultValue": "#0000003B",
      "hidden": "{{ formData.eye_protection_cover === 'off' }}",
      "type": "color"
    },
    "eye_protection_cover_light": {
      "display": "亮色模式护眼蒙版(前置功能:护眼蒙版)",
      "category": "beautify",
      "defaultValue": "#66ccff3B",
      "hidden": "{{ formData.eye_protection_cover === 'off' }}",
      "type": "color"
    },

    "tips-useful": {
      "type": "note",
      "category": "useful",
      "display": "-- 实用 --"
    },
    "quickly_copy": {
      "display": "快速复制",
      "type": "option",
      "category": "useful",
      "defaultValue": "all",
      "options": [
        {
          "key": "all",
          "display": "[标题]链接"
        },
        {
          "key": "BV",
          "display": "BV"
        },
        {
          "key": "url",
          "display": "链接"
        },
        {
          "key": "title",
          "display": "标题"
        },
        {
          "key": "off",
          "display": "已关闭"
        }
      ]
    },
    "quickly_copy_hotkey": {
      "display": "Ctrl+Shirt+C快速复制标题(前置功能:标题快速复制)",
      "defaultValue": "off",
      "category": "useful",
      "type": "option",
      "options": [
        {
          "display": "开启",
          "key": "on"
        },
        {
          "display": "关闭",
          "key": "off"
        }
      ]
    },

    "video_cover_download": {
      "display": "视频封面获取",
      "type": "bool",
      "category": "quick",
      "defaultValue": true
    },
    "hotkey": {
      "display": "按ESC关闭评论区图片",
      "defaultValue": true,
      "description": "",
      "type": "bool"
    },

    "tips-filter": {
      "type": "note",
      "category": "filter",
      "display": "-- 过滤 --"
    },
    "filter": {
      "display": "评论过滤",
      "defaultValue": "off",
      "category": "filter",
      "type": "option",
      "options": [
        {
          "display": "开启",
          "key": "on"
        },
        {
          "display": "关闭",
          "key": "off"
        }
      ]
    },

    "filter_rules": {
      "display": "正则过滤规则",
      "category": "filter",
      "type": "richText",
      "defaultValue": "/^.?6{1,12}.?$/ \n/^(@.{1,12}\\s?.{0,12}){1,24}$/ \n/压缩毛巾/ \n/答辩/ \n/爷/ \n/谁问你了/ \n/亡灵军团/ \n/死灵法师/ \n",
      "props": {
        "placeholder": "",
        "autoSize": true
      },
      "description": "",
      "tooltip": {
        "title": "使用正则表达式,一行一个"
      },
      "extra": "这是一个搁置很久的功能, 可能存在bug",
      "widget": "textArea",
      "hidden": "{{ formData.filter === 'off' }}"
    }
  }
}
