{
  "version": "0.1.43",
  "name": "bilibili",
  "pages": {
    "home": [
      "www.bilibili.com"
    ],
    "video": [
      "www.bilibili.com/video"
    ],
    "read": [
      "www.bilibili.com/read"
    ]
